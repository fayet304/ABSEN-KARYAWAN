<body>
  <div class="dragon-bg"></div>

  <h1>Absensi Harian</h1>

  <form id="absenForm">
    <label>Nama:</label>
    <input type="text" id="nama" placeholder="Masukkan Nama" required>

    <label>NIK / ID:</label>
    <input type="text" id="nik" placeholder="Masukkan NIK / ID" required>

    <label>Keterangan:</label>
    <select id="status">
      <option value="Hadir">Hadir</option>
      <option value="Izin">Izin</option>
      <option value="Sakit">Sakit</option>
    </select>

    <button type="submit">Submit Absen</button>
  </form>

  <button id="downloadBtn">Download ke Excel</button>

  <table id="absenTable">
    <thead>
      <tr>
        <th>Nama</th>
        <th>NIK</th>
        <th>Waktu</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <!-- Data absensi akan muncul di sini -->
    </tbody>
  </table>

  <script>
    const form = document.getElementById('absenForm');
    const tableBody = document.querySelector('#absenTable tbody');
    const downloadBtn = document.getElementById('downloadBtn');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const nama = document.getElementById('nama').value;
      const nik = document.getElementById('nik').value;
      const status = document.getElementById('status').value;
      const waktu = new Date().toLocaleString('id-ID');

      const row = `<tr><td>${nama}</td><td>${nik}</td><td>${waktu}</td><td>${status}</td></tr>`;
      tableBody.innerHTML += row;

      form.reset();
    });

    downloadBtn.addEventListener('click', function () {
      let csv = 'Nama,NIK,Waktu,Status\n';
      const rows = document.querySelectorAll('table tr');
      rows.forEach(row => {
        const cols = row.querySelectorAll('td, th');
        const rowData = [];
        cols.forEach(col => rowData.push(col.innerText));
        csv += rowData.join(',') + '\n';
      });

      const hiddenElement = document.createElement('a');
      hiddenElement.href = 'data:text/csv;charset=utf-8,' + encodeURI(csv);
      hiddenElement.target = '_blank';
      hiddenElement.download = 'data_absensi.csv';
      hiddenElement.click();
    });
  </script>
</body>
</html>

